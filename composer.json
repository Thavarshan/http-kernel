{
    "name": "zip/http-kernel",
    "description": "Lightning-fast, ultra-slim PHP HTTP kernel with zero bloat and maximum performance",
    "type": "library",
    "authors": [
        {
            "name": "Jerome Thayananthajothy",
            "email": "tjthavarshan@gmail.com"
        }
    ],
    "keywords": [
        "http",
        "kernel",
        "middleware",
        "psr-7",
        "psr-15",
        "performance",
        "php"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Zip\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Benchmarks\\": "benchmarks/"
        }
    },
    "require": {
        "php": "^8.3",
        "psr/http-message": "^1.0|^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "laminas/laminas-diactoros": "^3.0",
        "mockery/mockery": "^1.6",
        "nyholm/psr7": "^1.5",
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^6.11"
    },
    "scripts": {
        "test": "phpunit",
        "psalm": "psalm",
        "cs-check": "php-cs-fixer fix --dry-run --diff ./src",
        "cs-fix": "php-cs-fixer fix ./src",
        "benchmark": "php benchmarks/run-benchmarks.php",
        "benchmark-kernel": "php benchmarks/run-benchmarks.php --filter=Kernel",
        "benchmark-middleware": "php benchmarks/run-benchmarks.php --filter=Middleware",
        "analyze": [
            "@psalm",
            "@cs-check"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "classmap-authoritative": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
